<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jeu3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score : 0"
            android:textColor="#7F00FF"
            android:textSize="20sp"
            android:translationX="225sp"
            android:translationY="15sp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:30"
            android:textColor="#7F00FF"
            android:textSize="20sp"
            android:translationX="100sp"
            android:translationY="15sp" />

        <ImageView
            android:id="@+id/target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/_a3598c330d5b9_9611956715134619552" />

        <ImageView
            android:id="@+id/troll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="50sp"
            app:srcCompat="@drawable/kisspng_baseball_bat_softball_small_ball_clip_art_fun_baseball_cliparts_5a84a177195283_6475761515186415271037" />

        <ImageView
            android:id="@+id/troll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="100sp"
            app:srcCompat="@drawable/kisspng_christmas_ornament_red_red_christmas_ball_5aa2aded6b6c80_12249155152061079744" />

        <ImageView
            android:id="@+id/troll3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="150sp"
            app:srcCompat="@drawable/kisspng_clip_art_christmas_christmas_gift_christmas_day_christmas_clipart_with_no_background_free_downlo_5ba3d9eaa4f806_0666747715374648106757" />

        <ImageView
            android:id="@+id/troll4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="200sp"
            app:srcCompat="@drawable/kisspng_where_s_wally_united_kingdom_children_s_literatur_goodbye_5abd75f59e3164_694999671522365941648" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>